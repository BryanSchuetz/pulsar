---
import BadgeCheck from './BadgeCheck.astro'
import NavLink from './NavLink.astro'
import MobileNavLink from './MobileNavLink.astro'
import { getEntry } from 'astro:content';
const navlinks = await getEntry('mydata', 'nav');
const navs = navlinks.data
---

<header class="bg-white" >
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">Your Boy</span>
        <img class="h-16 w-auto rounded-md" src="avatar.png" alt="Your Boy">
        <BadgeCheck fill="#1E86EB" color="white" />
      </a>
    </div>
    <div class="flex lg:hidden z-[11] self-start">
    </div>
      <div class="hidden lg:flex lg:gap-x-12">
        {navs.map((link) =>(
          <NavLink href={link.href} text={link.name} icon={link.icon} />
        ))}
      </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <a href="/bike" class="text-sm font-semibold leading-6 text-gray-900"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-bike"><circle cx="18.5" cy="17.5" r="3.5"/><circle cx="5.5" cy="17.5" r="3.5"/><circle cx="15" cy="5" r="1"/><path d="M12 17.5V14l-3-3 4-3 2 3h2"/></svg> <span aria-hidden="true"></span></a>
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. --> 
  <div class="lg:hidden menubar" role="dialog" aria-modal="true" >
    <button id="menu-toggle" class="z-20 absolute right-5 top-0"><svg class="ham ham6" viewBox="0 0 100 100" width="80" onclick="this.classList.toggle('active')">
      <path
            class="line top"
            d="m 30,33 h 40 c 13.100415,0 14.380204,31.80258 6.899646,33.421777 -24.612039,5.327373 9.016154,-52.337577 -12.75751,-30.563913 l -28.284272,28.284272" />
      <path
            class="line middle"
            d="m 70,50 c 0,0 -32.213436,0 -40,0 -7.786564,0 -6.428571,-4.640244 -6.428571,-8.571429 0,-5.895471 6.073743,-11.783399 12.286435,-5.570707 6.212692,6.212692 28.284272,28.284272 28.284272,28.284272" />
      <path
            class="line bottom"
            d="m 69.575405,67.073826 h -40 c -13.100415,0 -14.380204,-31.80258 -6.899646,-33.421777 24.612039,-5.327373 -9.016154,52.337577 12.75751,30.563913 l 28.284272,-28.284272" />
    </svg></button>
    <script>
      function handleClick () {
        const menuContainer = document.getElementById('menu');
        const menuBackground = document.getElementById('menu-background');
        menuContainer.classList.toggle("invisible")
        menuBackground.classList.toggle("invisible")
      }
      document.getElementById("menu-toggle").addEventListener("click", handleClick);
    </script>
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div id="menu-background" class="fixed invisible inset-0 z-10 bg-SignalPink transition-all"></div>
    <div id="menu" class="fixed invisible inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10 transition-all"> 
      <div class="flex items-center justify-between [@media(min-width:640px)]:hidden">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Your Boy</span>
          <img class="h-16 w-auto rounded-md" src="avatar.png" alt="Your Boy">
          <BadgeCheck fill="#1E86EB" color="white" />
        </a>
      </div>
        <div class="[@media(min-width:640px)]:mt-8">
        {navs.map((link)=>(
          <MobileNavLink href={link.href} text={link.name} icon={link.icon} />
        ))}
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            
          </div>
          <div class="py-6">
            <a href="/bike" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-bike"><circle cx="18.5" cy="17.5" r="3.5"/><circle cx="5.5" cy="17.5" r="3.5"/><circle cx="15" cy="5" r="1"/><path d="M12 17.5V14l-3-3 4-3 2 3h2"/></svg></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
.ham {
  cursor: pointer;
  -webkit-tap-highlight-color: transparent; 
  transition: transform 400ms;
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.hamRotate.active {
  transform: rotate(45deg);
}
.hamRotate180.active {
  transform: rotate(180deg);
}
.line {
  fill:none;
  transition: stroke-dasharray 400ms, stroke-dashoffset 400ms;
  stroke: #F4C179;
  stroke-width:4;
  stroke-linecap:round;
}

.ham6 .top {
  stroke-dasharray: 40 172;
}
.ham6 .middle {
  stroke-dasharray: 40 111;
}
.ham6 .bottom {
  stroke-dasharray: 40 172;
}
.ham6.active .top {
  stroke-dashoffset: -132px;
}
.ham6.active .middle {
  stroke-dashoffset: -71px;
}
.ham6.active .bottom {
  stroke-dashoffset: -132px;
}

#menu-background{
  opacity: .8;
}
#menu {
  opacity: .9;
}
#menu.invisible, #menu-background.invisible{
  opacity: 0;
}
</style>