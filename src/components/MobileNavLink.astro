---
const { text, href} = Astro.props
import { PenSquare, GitBranchPlus, PocketKnife, Image } from 'lucide-astro'
const IconComponents = {
  Blog: PenSquare,
  Projects: GitBranchPlus,
  Uses: PocketKnife,
  Photos: Image
}
---
<a href={href} class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">  
  {<IconComponents[text] class="inline -top-[1px] relative mr-1" />}
  {text}
</a>
